{
  "eslint.autoFixOnSave": true,

  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "javascript",
    "javascriptreact",
    "json",
    "svg",
    "c",
    "h",
    "xml",
    "elm"
  ],

  "explorer.width": 40,
  "explorer.previewAction.onHover": false,
  "explorer.presets": {
    "floating": {
      "position": "floating",
      "floating-width": 80,
      "floating-position": "center"
    }
  },

  "clangd.path": "/Users/petka/.config/coc/extensions/coc-clangd-data/install/10.0.0/clangd_10.0.0/bin/clangd",

  "languageserver": {
    "elmLS": {
      "command": "elm-language-server",
      "filetypes": ["elm"],
      "rootPatterns": ["elm.json"],
      "initializationOptions": {
        "elmAnalyseTrigger": "never"
      }
    }
  }
}
